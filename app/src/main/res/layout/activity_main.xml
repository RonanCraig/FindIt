<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ronan_local.findit.MainActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/cinema_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showMap"
        android:text="Cinema"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/cinemaImageButton"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showMap"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="177dp"
        android:contentDescription="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconcinema" />

    <Button
        android:id="@+id/restaurant_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showMap"
        android:text="Restaurant"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/carpark_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showMap"
        android:text="Car Park"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/park_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showMap"
        android:text="Park"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="183dp" />

</android.support.constraint.ConstraintLayout>
